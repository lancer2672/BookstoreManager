<UserControl x:Class="BookstoreManager.Views.SharedControl.SearchBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             
             xmlns:local="clr-namespace:BookstoreManager.Views.SharedControl"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <DockPanel Width="400">
        <TextBox
            DockPanel.Dock="Left"
            materialDesign:HintAssist.Hint="Từ khóa"
            Width="280"
            Style="{StaticResource MaterialDesignFloatingHintTextBox}" />
        <Button
                Command="{Binding Search}"
                Style="{StaticResource IconTextBtn}">
            <DockPanel>
                <materialDesign:PackIcon Kind="DatabaseSearch" />
                <TextBlock Text="Tìm kiếm"/>
            </DockPanel>
        </Button>
    </DockPanel>
</UserControl>
