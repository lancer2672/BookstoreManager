<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="IconBtn" TargetType="Button" BasedOn="{StaticResource MaterialDesignOutlinedButton}">
        <Setter Property="Padding" Value="0"/>
        <Setter Property="MinWidth" Value="40" ></Setter>
        <Setter Property="Height" Value="38"/>
        <Style.Resources>
            <Style TargetType="{x:Type materialDesign:PackIcon}">
                <Setter Property="Padding" Value="0"/>
                <Setter Property="Width" Value="22"/>
                <Setter Property="Height" Value="22"/>
            </Style>
        </Style.Resources>
    </Style>
    <Style x:Key="TextBtn" TargetType="Button" BasedOn="{StaticResource MaterialDesignRaisedButton}">
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Height" Value="36"/>
        <Setter Property="Padding" Value="20 0"/>
    </Style>
</ResourceDictionary>