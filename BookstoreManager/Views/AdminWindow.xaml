                            </StackPanel>
                            <syncfusion:DropDownButtonAdv 
                                Label=""
                                FontWeight="DemiBold"
                                x:Name="AccountNavBtn" 
                                SizeMode="Small" 
                                IconHeight="25"
                            
                                IconWidth="25"
                                HorizontalAlignment="Right" 
                                VerticalAlignment="Center"
                                Padding="10 3"
                                Background="White" 
                                BorderThickness="0" 
                                >
                                <syncfusion:DropDownMenuGroup>
                                    <syncfusion:DropDownMenuItem Padding="10 2" Header="Thông tin" FontWeight="Regular">
                                  
                                    </syncfusion:DropDownMenuItem>
                                    <syncfusion:DropDownMenuItem Padding="10 2" Header="Đăng xuất" FontWeight="Regular">
                                     
                                    </syncfusion:DropDownMenuItem>

                                </syncfusion:DropDownMenuGroup>
                            </syncfusion:DropDownButtonAdv>
                        </DockPanel>
                    </Border>
                    <Frame Padding="10 10" Grid.Row="1" x:Name="Main" x:FieldModifier="public" NavigationUIVisibility="Hidden"/>
