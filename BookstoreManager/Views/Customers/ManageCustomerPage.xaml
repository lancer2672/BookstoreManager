<Page x:Class="BookstoreManager.Views.ManageCustomerPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BookstoreManager.Views"
      xmlns:SharedUC ="clr-namespace:BookstoreManager.Views.SharedControl"
      mc:Ignorable="d" 
       
      d:DesignHeight="450" d:DesignWidth="800"
      DataContext="{StaticResource CustomerVM}"
      Title="ManageCustomerPage">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="5*"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>
        <TextBlock Text="Danh sách nhân viên"/>
        <StackPanel  Grid.Row="1" Orientation="Horizontal" VerticalAlignment="Top">
            <StackPanel.Resources>
                <Style TargetType="Button">
                    <Setter Property="Margin" Value="0 0 20 0"></Setter>
                    <Setter Property="MinWidth" Value="50"></Setter>
                </Style>
            </StackPanel.Resources>
            <SharedUC:SearchBar ></SharedUC:SearchBar>
            <Button Content="Thêm" Command="{Binding COpenAddCustomerWindow}"></Button>
            <Button Content="Xóa" Command="{Binding CDeleteCustomer}" CommandParameter="{Binding ElementName=lv}"></Button>
            <Button Content="Chỉnh sửa" Command="{Binding COpenUpdateCustomerWindow}" CommandParameter="{Binding ElementName=lv}"></Button>
        </StackPanel>
        <ListView Grid.Row="2" 
                  x:Name="lv"
                  ItemsSource="{Binding ListCustomer}"  
                  SelectionMode="Multiple" 
                  SelectedItem="{Binding SelectedCustomer}">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="STT" DisplayMemberBinding="{Binding RelativeSource={RelativeSource Mode=FindAncestor,AncestorType=ListViewItem},Converter={StaticResource  IndexConverter}}"></GridViewColumn>
                    <GridViewColumn Header="Họ và tên" DisplayMemberBinding="{Binding Name}"/>
                    <GridViewColumn Header="SĐT" DisplayMemberBinding="{Binding PhoneNumber}"/>
                    <GridViewColumn Header="Email" DisplayMemberBinding="{Binding Email}"/>
                    <GridViewColumn Header="Tổng nợ" DisplayMemberBinding="{Binding Debt}"/>

                </GridView>
            </ListView.View>
        </ListView>
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Nhập liệu từ Excel" Margin="0 0 20 0" Command="{Binding CImportExcel}"></Button>
            <Button Content="Xuất file Excel" Command="{Binding CExportExcel}"></Button>

        </StackPanel>
    </Grid>
</Page>
